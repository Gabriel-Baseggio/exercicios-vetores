package exerciciosVetores3;

import java.util.ArrayList;
import java.util.Scanner;

public class questao4 {

	public static void main(String[] args) {
		
		ArrayList<String> nomes = new ArrayList<String>();
		String nomePesquisa = "";
		int opcao, pos = 0;
		Scanner sc = new Scanner(System.in);
		
		do {
			System.out.print("\n ======== MENU ========\n"
					+ "1) Cadastrar nome\n"
					+ "2) Pesquisar nome\n"
					+ "3) Listar todos os nome\n"
					+ "0) Sair do programa\n"
					+ "——————–\n"
					+ "Digite sua escolha: ");
			opcao = sc.nextInt();
			
			switch (opcao) {
			case 1:
				System.out.print("\nDigite o nome a ser salvo na posição " + pos + ": ");
				nomes.add(sc.next());
				break;
			case 2:
				System.out.print("\nDigite o nome para pesquisar: ");
				nomePesquisa = sc.next();
				for (int i = 0; i < nomes.length; i++) {
					if (nomePesquisa.equals(nomes[i])) {
						System.out.println("Nome existente na posição " + i);
						break;
					} else if (i == (nomes.length - 1)) {
						
					}
				}
				break;
			case 3:
				System.out.println("\n ======== Lista de nomes ======== ");
				for (String nome : nomes) {
					System.out.println(nome);
				}
				break;
			case 0:
				System.out.println("\nSaindo do programa!");
				break;
			default:
				System.out.println("\nOpção incorreta!");
			}
			
		} while (opcao != 0);
		
		
		
		sc.close();

	}

}
