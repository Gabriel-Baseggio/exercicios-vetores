package exerciciosVetores3;

import java.util.Scanner;

public class questao2 {

	public static void main(String[] args) {

		int[] vetor = new int[6], pares, impares;
		int qtdPares = 0, posPar = 0, posImpar = 0;
		Scanner sc = new Scanner(System.in);
		;

		for (int pos = 0; pos < vetor.length; pos++) {
			System.out.print("Digite o " + (pos + 1) + "º número inteiro do vetor: ");
			vetor[pos] = sc.nextInt();

			if (vetor[pos] % 2 == 0) {
				qtdPares++;
			}
		}

		pares = new int[qtdPares];
		impares = new int[vetor.length - qtdPares];

		for (int pos = 0; pos < vetor.length; pos++) {
			if (vetor[pos] % 2 == 0) {
				pares[posPar] = vetor[pos];
				posPar++;
			} else {
				impares[posImpar] = vetor[pos];		
				posImpar++;
			}
		}
		
		System.out.println("Quantidade de números pares: " + qtdPares);
		System.out.print("Valores pares: ");
		for (int valor : pares) {
			System.out.println(valor + " ");
		}
		System.out.println("Quantidade de números ímpares: " + (vetor.length - qtdPares));
		System.out.print("Valores ímpares: ");
		for (int valor : impares) {
			System.out.println(valor + " ");
		}

		sc.close();

	}

}
