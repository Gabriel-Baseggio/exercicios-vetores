package exerciciosVetores3;

import java.util.ArrayList;
import java.util.Scanner;

public class questao4 {

	public static void main(String[] args) {
		
		ArrayList<String> nomes = new ArrayList<String>();
		String nomePesquisa = "";
		int opcao, posAlterar = 0;
		Scanner sc = new Scanner(System.in);
		
		do {
			System.out.print(" ======== MENU ========\n"
					+ "1) Cadastrar nome\n"
					+ "2) Pesquisar nome\n"
					+ "3) Listar todos os nome\n"
					+ "4) Alterar um nome\n"
					+ "5) Excluir um nome\n"
					+ "0) Sair do programa\n"
					+ "——————–\n"
					+ "Digite sua escolha: ");
			opcao = sc.nextInt();
			
			switch (opcao) {
			case 1:
				System.out.print("\nDigite o próximo nome a ser salvo: ");
				nomes.add(sc.next());
				break;
			case 2:
				System.out.print("\nDigite o nome para pesquisar: ");
				nomePesquisa = sc.next();
				for (int pos = 0; pos < nomes.size(); pos++) {
					if (nomePesquisa.equals(nomes.get(pos))) {
						System.out.println("Nome existente na posição " + pos);
						break;
					} else if (pos == (nomes.size() - 1)) {
						System.out.println("Nome inexistente!");
					}
				}
				break;
			case 3:
				System.out.println("\n ======== Lista de nomes ======== ");
				for (String nome : nomes) {
					System.out.println(nome);
				}
				break;
			case 4:
				System.out.print("Digite a posição do nome a ser alterado: ");
				posAlterar = sc.nextInt();
				System.out.print("Digite o novo nome: ");
				nomes.set(posAlterar, sc.next());
			case 5:
				System.out.print("Digite a posição do nome a ser excluído: ");
				nomes.remove(sc.nextInt());
			case 0:
				System.out.println("\nSaindo do programa!");
				break;
			default:
				System.out.println("\nOpção incorreta!");
			}
			
		} while (opcao != 0);
		
		
		
		sc.close();

	}

}
