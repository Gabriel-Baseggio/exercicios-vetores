package exerciciosVetores3;

import java.util.Scanner;

public class questao4 {

	public static void main(String[] args) {
		
		String[] nomes;
		String nomePesquisa = "";
		int qtd, opcao, pos = 0;
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Digite a quantidade de nomes do vetor: ");
		qtd = sc.nextInt();
		
		nomes = new String[qtd];
		
		do {
			System.out.print(" ======== MENU ========\n"
					+ "1) Cadastrar nome\n"
					+ "2) Pesquisar nome\n"
					+ "3) Listar todos os nome\n"
					+ "0) Sair do programa\n"
					+ "——————–\n"
					+ "Digite sua escolha: ");
			opcao = sc.nextInt();
			
			switch (opcao) {
			case 1:
				System.out.print("Digite o nome a ser salvo na posição " + pos + ": ");
				nomes[pos] = sc.next();
				pos++;
				break;
			case 2:
				System.out.print("Digite o nome para pesquisar: ");
				nomePesquisa = sc.next();
				for (int i = 0; i < nomes.length; i++) {
					if (nomePesquisa.equals(nomes[i])) {
						System.out.println("Nome existente na posição " + i);
					}
				}
				break;
			case 3:
				System.out.println(" ======== Lista de nomes ======== ");
				for (String nome : nomes) {
					System.out.println(nome);
				}
				break;
			case 0:
				System.out.println("Saindo do programa!");
				break;
			default:
				System.out.println("Opção incorreta!");
			}
			
		} while (opcao != 0);
		
		
		
		sc.close();

	}

}
